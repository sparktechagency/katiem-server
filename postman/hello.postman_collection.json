{
  "info": {
    "name": "Hello API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Create Hello",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"{{name}}\",\n  \"status\": \"{{status}}\",\n  \"skill\": [],\n  \"description\": \"{{description}}\"\n}",
          "options": {
            "raw": {
              "language": "json"
            }
          }
        },
        "url": {
          "raw": "{{base_url}}/api/v1/hello",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "api",
            "v1",
            "hello"
          ]
        }
      },
      "event": [
        {
          "listen": "prerequest",
          "script": {
            "exec": [
              "pm.variables.set(\"name\", \"name_\" + Date.now());",
              "pm.variables.set(\"description\", \"description_\" + Date.now());"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Get All Hellos",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/v1/hello",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "api",
            "v1",
            "hello"
          ]
        }
      }
    },
    {
      "name": "Get Hello by ID",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/v1/hello/{{hello_id}}",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "api",
            "v1",
            "hello",
            "{{hello_id}}"
          ]
        }
      }
    },
    {
      "name": "Update Hello",
      "request": {
        "method": "PATCH",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"{{name}}\",\n  \"status\": \"{{status}}\",\n  \"skill\": []\n}",
          "options": {
            "raw": {
              "language": "json"
            }
          }
        },
        "url": {
          "raw": "{{base_url}}/api/v1/hello/{{hello_id}}",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "api",
            "v1",
            "hello",
            "{{hello_id}}"
          ]
        }
      },
      "event": [
        {
          "listen": "prerequest",
          "script": {
            "exec": [
              "pm.variables.set(\"name\", \"name_\" + Date.now());",
              "pm.variables.set(\"description\", \"description_\" + Date.now());"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Delete Hello",
      "request": {
        "method": "DELETE",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/v1/hello/{{hello_id}}",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "api",
            "v1",
            "hello",
            "{{hello_id}}"
          ]
        }
      }
    }
  ]
}